{
  "title": "MLOps Alerts & Incidents",
  "tags": [
    "mlops",
    "alerts",
    "monitoring"
  ],
  "timezone": "browser",
  "panels": [
      {
        "title": "Active Alerts",
        "type": "alertlist",
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 0
        },
        "options": {
          "showOptions": "current",
          "maxItems": 20,
          "sortOrder": 1,
          "dashboardAlerts": true
        }
      },
      {
        "title": "API Health Summary",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 8
        },
        "targets": [
          {
            "expr": "up{job=\"fastapi\"}",
            "legendFormat": "API Status",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "background",
          "graphMode": "none",
          "reduceOptions": {
            "values": false,
            "calcs": [
              "lastNotNull"
            ]
          }
        }
      },
      {
        "title": "Data Drift Score",
        "type": "gauge",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 8
        },
        "targets": [
          {
            "expr": "data_drift_score",
            "legendFormat": "Drift Score",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "max": 1,
            "min": 0,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 0.3
                },
                {
                  "color": "red",
                  "value": 0.5
                }
              ]
            }
          }
        }
      },
      {
        "title": "Prediction Latency (95th Percentile)",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 8
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, prediction_latency_seconds_bucket)",
            "legendFormat": "P95 Latency",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 0.5
                },
                {
                  "color": "red",
                  "value": 1
                }
              ]
            }
          }
        }
      },
      {
        "title": "Recent Alert Summary",
        "type": "table",
        "gridPos": {
          "h": 6,
          "w": 24,
          "x": 0,
          "y": 12
        },
        "targets": [
          {
            "expr": "ALERTS{severity=~\"critical|warning\"}",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {},
              "indexByName": {},
              "renameByName": {
                "__name__": "Alert",
                "severity": "Severity",
                "job": "Component"
              }
            }
          }
        ]
      }
    ],
    "refresh": "30s",
    "schemaVersion": 39,
    "style": "dark",
    "templating": {
      "list": []
    },
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": [
        "10s",
        "30s",
        "1m",
        "5m",
        "15m",
        "30m",
        "1h"
      ]
    },
    "uid": "mlops_alerts",
    "version": 1

