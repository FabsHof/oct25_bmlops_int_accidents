{{ define "email.critical.html" }}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            color: #333;
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background: #ffebee;
        }
        .header {
            background: #f44336;
            color: white;
            padding: 20px;
            border-radius: 4px;
            margin-bottom: 20px;
        }
        .alert {
            background: #fff;
            border: 2px solid #f44336;
            padding: 20px;
            margin-bottom: 15px;
            border-radius: 4px;
        }
        .priority-banner {
            background: #c62828;
            color: white;
            padding: 15px;
            margin-bottom: 20px;
            border-radius: 4px;
            text-align: center;
            font-size: 18px;
            font-weight: bold;
        }
        .action-required {
            background: #fff3cd;
            border: 2px solid #ffc107;
            padding: 15px;
            margin: 20px 0;
            border-radius: 4px;
        }
        .label {
            display: inline-block;
            padding: 3px 8px;
            margin: 2px;
            background: #f44336;
            color: white;
            border-radius: 3px;
            font-size: 12px;
            font-weight: bold;
        }
        .response-steps {
            background: #e3f2fd;
            padding: 15px;
            margin: 15px 0;
            border-left: 4px solid #2196f3;
        }
        .response-steps ol {
            margin: 10px 0;
            padding-left: 20px;
        }
        .footer {
            margin-top: 30px;
            padding-top: 20px;
            border-top: 2px solid #f44336;
            font-size: 12px;
            color: #666;
        }
    </style>
</head>
<body>
    <div class="priority-banner">
        ðŸš¨ CRITICAL ALERT - IMMEDIATE ACTION REQUIRED ðŸš¨
    </div>

    <div class="header">
        <h2>Critical System Alert</h2>
        <p><strong>Severity:</strong> CRITICAL</p>
        <p><strong>Status:</strong> {{ .Status | toUpper }}</p>
        <p><strong>Alert Count:</strong> {{ len .Alerts }}</p>
    </div>

    <div class="action-required">
        <h3>âš¡ Action Required</h3>
        <p>This is a <strong>CRITICAL</strong> alert requiring immediate attention. A production system is experiencing a severe issue that may impact service availability or data integrity.</p>
        <p><strong>Expected Response Time:</strong> Within 5 minutes</p>
    </div>

    {{ if gt (len .Alerts.Firing) 0 }}
    <h3>Active Critical Alerts ({{ len .Alerts.Firing }})</h3>
    {{ range .Alerts.Firing }}
    <div class="alert">
        <h3>ðŸ”¥ {{ .Labels.alertname }}</h3>
        
        <p><strong>Summary:</strong> {{ .Annotations.summary }}</p>
        <p><strong>Description:</strong> {{ .Annotations.description }}</p>
        
        <p><strong>Component:</strong> <span class="label">{{ if .Labels.component }}{{ .Labels.component }}{{ else }}unknown{{ end }}</span></p>
        <p><strong>Started:</strong> {{ .StartsAt.Format "2006-01-02 15:04:05 MST" }}</p>
        
        {{ if .Annotations.runbook_url }}
        <div class="response-steps">
            <h4>ðŸ“‹ Response Steps</h4>
            <ol>
                <li>Review the <a href="{{ .Annotations.runbook_url }}" style="color: #2196f3; font-weight: bold;">incident runbook</a></li>
                <li>Check the affected service logs</li>
                <li>Escalate to on-call engineer if needed</li>
                <li>Update incident channel with findings</li>
            </ol>
        </div>
        {{ end }}
        
        <p><strong>Labels:</strong></p>
        <div>
            {{ range .Labels.SortedPairs }}
            <span class="label">{{ .Name }}: {{ .Value }}</span>
            {{ end }}
        </div>
    </div>
    {{ end }}
    {{ end }}

    {{ if gt (len .Alerts.Resolved) 0 }}
    <h3 style="color: #4caf50;">âœ… Resolved Critical Alerts</h3>
    {{ range .Alerts.Resolved }}
    <div style="background: #e8f5e9; border: 2px solid #4caf50; padding: 15px; margin-bottom: 15px; border-radius: 4px;">
        <h4>{{ .Labels.alertname }}</h4>
        <p><strong>Summary:</strong> {{ .Annotations.summary }}</p>
        <p><strong>Duration:</strong> {{ .StartsAt.Format "15:04:05" }} - {{ .EndsAt.Format "15:04:05" }}</p>
        <p><strong>Resolved at:</strong> {{ .EndsAt.Format "2006-01-02 15:04:05 MST" }}</p>
        <p style="color: #4caf50; font-weight: bold;">âœ“ Incident has been resolved</p>
    </div>
    {{ end }}
    {{ end }}

    <div class="footer">
        <p><strong>MLOps Accidents Prediction System - Critical Alert</strong></p>
        <p>
            <strong>Quick Actions:</strong><br>
            â€¢ <a href="http://localhost:9093" style="color: #f44336; font-weight: bold;">View in Alertmanager</a><br>
            â€¢ <a href="http://localhost:3000" style="color: #f44336; font-weight: bold;">Check Grafana Dashboards</a><br>
            â€¢ <a href="http://localhost:9090" style="color: #f44336; font-weight: bold;">Query Prometheus</a>
        </p>
        <p><em>This is an automated critical alert. For urgent issues, contact the on-call engineer immediately.</em></p>
    </div>
</body>
</html>
{{ end }}
